@model FailTracker.Web.Models.ProjectAdministration.ProjectSummaryViewModel[]

@{
	ViewBag._Title = "Project Administration";
}

<h2>Project Administration</h2>

<table>
<thead>
	<th>Project Name</th>
	<th>Active Stories</th>
	<th>Members</th>
	<th>&nbsp;</th>
</thead>
@foreach (var p in Model)
{
	<tr>
		<td>@p.Name</td>
		<td>@p.ActiveStories</td>
		<td>@p.Members</td>
		<td>@(Html.ActionLink<ProjectAdministrationController>(c => c.InviteMember()))</td>
	</tr>
}
</table>

<p>@(Html.ActionLink<ProjectAdministrationController>(c => c.AddProject(), "Add New Project", new { @class="button"}))</p>
