<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag._Title - Fail Tracker</title>
	<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Shared/TransdminTheme/css/transdmin.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>   
	<script type="text/javascript">
		$(function () {
			$("input[type=button], input[type=submit]").button();
		});
	</script>
</head>
<body>
	<div id="wrapper">
    	<!-- h1 tag stays for the logo, you can use the a tag for linking the index page -->
    	<h1>
			@(Html.ActionLink<IssuesController>(c => c.Dashboard(), "Fail Tracker"))
			<strong>Because failure is everywhere...</strong>
		</h1>
		@if(Request.IsAuthenticated) {
        <ul id="mainNav">
			@*TODO: Render links to actions! *@
			<li>@(Html.ActionLink<IssuesController>(c => c.Dashboard(), "Dashboard", new { @class="active"}))</li>
        	<li><a href="#">ADMINISTRATION</a></li>
        	<li><a href="#">DESIGN</a></li>
        	<li><a href="#">OPTION</a></li>
        	<li class="right"><a href="#">LOGOUT</a></li>
        	<li class="right">@(Html.ActionLink<IssuesController>(c => c.AddIssue(), "Add Issue"))</li>
        </ul>
		}
        <!-- // #end mainNav -->
        
        <div id="containerHolder">
			<div id="container">
				@if(IsSectionDefined("SideBar")){
        		<div id="sidebar">
					@RenderSection("SideBar")
                </div>    
				}
                
                <div id="main">
					@* TODO: Implement or remove? 
					<!-- breadcrumbs -->
					<div id="breadcrumbs">
						<a href="#">Dashboard</a> &raquo; 
						<a href="#" class="active">Print resources</a>
					</div>
					*@
					@Html.Partial("StatusMessage")
					@RenderBody()
                </div>
                <!-- // #main -->
                
                <div class="clear"></div>
            </div>
            <!-- // #container -->
        </div>	
        <!-- // #containerHolder -->
        
        <p id="footer">Based on the Transdmin Theme: <a href="http://www.perspectived.com">Perspectived</a></p>
	</div>
</body>
</html>
